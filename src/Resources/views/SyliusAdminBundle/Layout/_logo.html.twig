{% set logoSidebar = setting('monsieurbiz_better_admin.admin', 'logo_sidebar')|default('') %}
<a class="item" href="{{ path('sylius_admin_dashboard') }}" style="padding: 13px 0;">
    {% if logoSidebar is not empty %}
        <div class="monsieurbiz-better-admin-sidebar-logo">
            <img src="{{ logoSidebar|imagine_filter('admin_sidebar_logo') }}" class="ui fluid image">
        </div>
    {% else %}
        <div style="max-width: 90px;margin: 0 auto;">
            {% if use_webpack %}
                <img src="{{ asset('build/admin/images/admin-logo.svg', 'admin') }}" class="ui fluid image">
            {% else %}
                <img src="{{ asset('assets/admin/img/admin-logo.svg') }}" class="ui fluid image">
            {% endif %}
        </div>
    {% endif %}
</a>
